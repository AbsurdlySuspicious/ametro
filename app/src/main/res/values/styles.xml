<resources>
    <color name="primary">#4CAF50</color>
    <color name="primary_dark">#388E3C</color>
    <color name="primary_light">#C8E6C9</color>
    <color name="accent">#FF5722</color>
    <color name="primary_text">#212121</color>
    <color name="activated_color">#9bff5526</color>
    <color name="navigationColor">#ffffff</color>
    <color name="navigationColorForceDark">#000000</color>

    <drawable name="list_selected">#9EC07D</drawable>

    <color name="secondary_text">#727272</color>
    <color name="secondary_disabled_text">#89727272</color>
    <color name="icons">#FFFFFF</color>
    <color name="divider">#B6B6B6</color>

    <color name="route_panel_text_station">#000000</color>
    <color name="route_panel_text_time">#717171</color>
    <color name="route_panel_text_time_sec">#717171</color>
    <color name="route_panel_text_time_range">#717171</color>
    <color name="route_panel_misc_icon">#5F5F5F</color>
    <color name="route_panel_misc_icon_text">#5F5F5F</color>
    <color name="route_panel_misc_icon_disabled">#B5B5B5</color>

    <color name="panel_secondary_text">#80000000</color>
    <color name="panel_secondary_icon">#56000000</color>
    <color name="panel_red_icon">#DE5C5C</color>
    <color name="panel_dots">#ABABAB</color>
    <color name="panel_dots_inactive">#D0D0D0</color>
    <color name="panel_sub_replace_icon">#4A4A4A</color>
    <color name="panel_sub_background">#0D000000</color>
    <color name="panel_background">#FFFFFF</color>

    <style name="AppBase.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/item_background</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme" parent="AppBase.AppTheme" />

    <style name="AppBase.SplashTheme" parent="AppBase.AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="SplashTheme" parent="AppBase.SplashTheme" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/search_view_bg</item>
    </style>

    <style name="primaryText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="secondaryText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="bottomPanelStation" parent="primaryText">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="bottomPanelLine" parent="secondaryText">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="bottomPanelActionStation" parent="bottomPanelStation">
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bottomPanelRouteStation" parent="bottomPanelActionStation">
        <item name="android:textColor">@color/route_panel_text_station</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="secondaryAlarmText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="disabledSecondaryText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/secondary_disabled_text</item>

    </style>

    <style name="drawerItemText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DC000000</item>
    </style>

    <style name="drawerSubHeaderText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#89000000</item>
    </style>

    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="MapList">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CityList">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="ListContainer">
        <item name="android:background">@android:color/background_light</item>
    </style>

</resources>
