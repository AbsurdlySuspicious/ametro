<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
>

    <ImageView
            android:id="@+id/line_icon_transfer"
            android:layout_width="@dimen/panel_bottom_route_line_transfer_icon_size"
            android:layout_height="@dimen/panel_bottom_route_line_transfer_icon_size"
            android:src="@drawable/line_icon_transfer"
    />

    <ImageView
            android:id="@+id/icon_transfer_arrow"
            android:layout_width="@dimen/panel_bottom_route_line_transfer_icon_size"
            android:layout_height="@dimen/panel_bottom_route_line_transfer_icon_size"
            android:layout_marginHorizontal="2dp"
            android:visibility="gone"
            android:src="@drawable/ic_transfer_arrow"
            app:tint="#9B9B9B"
            tools:visibility="visible"
    />

</LinearLayout>